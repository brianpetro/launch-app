<div id="top-row" class="row">
  <div class="col-sm-12 text-center">
    <h1>
      Our Startup: Uber for Everything
    </h1>
  </div>
  <div class="col-sm-4 col-sm-offset-4">
    <div class="panel panel-primary">
      <div class="panel-heading">
        <div class="panel-title">
          Request an Invite
        </div>
      </div>
      <div class="panel-body">
        <div class="alert alert-info" role="alert" style="display: none">
        </div>
        <div class="alert alert-danger" role="alert" style="display: none">
        </div>
        <%= form_for @user, remote: true, html: {"data-type" => 'json'} do |f| %>
          <% if @user.errors.any? %>
            <div class="alert alert-danger" role="alert">
              <p><b><%= pluralize(@user.errors.count, "error") %></b> prohibited this request from being saved:</p>

              <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li><b><%= message %></b></li>
              <% end %>
              </ul>
            </div>
          <% end %>
          <div class="form-group">
            <%= f.label :email, 'Email:' %>
            <%= f.text_field :email, class: 'form-control' %>
          </div>
          <div class="form-group text-right">
            <%= f.hidden_field :tracker %>
            <%= f.submit 'Submit', class: 'btn btn-primary', data: { disable_with: 'Submitting...' } %>
          </div>
        <% end %>
        <div id="share_links" class="text-center">
          <ul class="list-inline">
            <li>
              <a href="<%= twitter_share_url %>" target="new" onclick="window.open(this.href, 'newwindow', 'width=600, height=600'); return false;">
                <span class="fa-stack fa-2x">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-twitter fa-stack-1x" style="color:#FFFFFF"></i>
                </span>
              </a>
            </li>
            <li>
              <a href="<%= facebook_share_url %>" target="new" onclick="window.open(this.href, 'newwindow', 'width=600, height=600'); return false;">
                <span class="fa-stack fa-2x">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-facebook fa-stack-1x" style="color:#FFFFFF"></i>
                </span>
              </a>
            </li>
            <li>
              <a href="<%= linkedin_share_url %>" target="new" onclick="window.open(this.href, 'newwindow', 'width=600, height=600'); return false;">
                <span class="fa-stack fa-2x">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-linkedin fa-stack-1x" style="color:#FFFFFF"></i>
                </span>
              </a>
            </li>
            <li>
              <a href="<%= reddit_share_url %>" target="new">
                <span class="fa-stack fa-2x">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-reddit fa-stack-1x" style="color:#FFFFFF"></i>
                </span>
              </a>
            </li>
            <li>
              <a href="<%= google_share_url %>" target="new" onclick="window.open(this.href, 'newwindow', 'width=600, height=600'); return false;">
                <span class="fa-stack fa-2x">
                  <i class="fa fa-circle fa-stack-2x"></i>
                  <i class="fa fa-google-plus fa-stack-1x" style="color:#FFFFFF"></i>
                </span>
              </a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</div>
